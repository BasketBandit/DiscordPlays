<configuration>
    <conversionRule conversionWord="higherlight" converterClass="com.basketbandit.utilities.HighlightingCompositeConverter"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%gray%d{HH:mm:ss.SSS}] %green([%thread]) [%higherlight(%level)] %logger{50} - %higherlight(%msg) %n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>